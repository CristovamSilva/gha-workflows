Environment Varaibles and Secrets

name: workflow_name

on:
     event_name:
          filter_name: [filters]

env: 
     workflow_env_var: <value>

jobs:
     job_id:
          environment: env_name
          env:
               job_id_env_var: <value>
          runs_on: platform
          steps:
               env: step_env_var: <value>
          - name:
